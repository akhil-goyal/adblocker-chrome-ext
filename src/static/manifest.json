{
  "manifest_version": 2,
  "name": "Ad blocker Extension",
  "description": "AdBlocke Extension in TypeScript!",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "all_urls",
    "*://*.googleadservices.com/*",
    "*://*.tpc.googlesyndication.com/*",
    "*://*.g.doubleclick.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
